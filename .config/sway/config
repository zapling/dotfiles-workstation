# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables

set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $gaps_inner 50
set $gaps_focus 600

set $term /usr/bin/alacritty
set $menu "wofi -d"

# gruvbox colors
set $darkred     "#cc241d"
set $red         "#fb4934"
set $darkgreen   "#98971a"
set $green       "#b8bb26"
set $darkyellow  "#d79921"
set $yellow      "#fabd2f"
set $darkblue    "#458588"
set $blue        "#83a598"
set $darkmagenta "#b16286"
set $magenta     "#d3869b"
set $darkcyan    "#689d6a"
set $cyan        "#8ec07c"
set $darkwhite   "#a89984"
set $white       "#ebdbb2"

set $bar_bg      "#272727"
set $bar_work_fg "#888888"
set $bar_work_bg "#333333"

set $bar_urgent_border     "#2f343a"
set $bar_urgent_background "#cc231c"
set $bar_urgent_foreground "#dbdbb2"

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)

output * bg ~/dotfiles/wallpaper/blade-runner-2049-3840x2160.png fill

#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
output eDP-1 scale 1.25

### Idle configuration

exec swayidle -w \
    timeout 180 'swaylock -f -c 282828' \
    timeout 240 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock -f -c 282828'

### Input configuration

input "type:keyboard" {
    xkb_layout se,us
    xkb_options grp:alt_space_toggle,compose:menu
}

input type:touchpad {
    tap enabled
}

input type:touch {
    events disabled
}

input "76:613:Apple_Inc._Magic_Trackpad" {
    natural_scroll disabled
}

input "1452:613:Apple_Inc._Magic_Trackpad" {
    natural_scroll disabled
}

### Autostarts

exec /usr/bin/dms run
exec /usr/bin/kanshi
exec /usr/bin/alacritty --class dropdown1
exec /usr/bin/alacritty --class dropdown2

### Statusbar

# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom

    font pango:LiterationMono Nerd Font 10
    status_command i3blocks

    colors {
        background $bar_bg

        # <colorclass>     <border>           <background>           <text>
        focused_workspace  $darkgreen         $bar_bg                $darkgreen
        active_workspace   $bar_work_bg       $bar_bg                $darkgreen
        inactive_workspace $bar_work_bg       $bar_bg                $bar_work_fg
        urgent_workspace   $bar_urgent_border $bar_urgent_background $bar_urgent_foreground
        binding_mode       $bar_urgent_border $bar_urgent_background $bar_urgent_foreground

        statusline $white
    }
}

### Key bindings

    # Start terminal (in arch)
    bindsym $mod+Return exec $term -e distrobox enter arch

    # Dropdown terminals
    bindsym $mod+u exec ~/.local/bin/scripts/swayvm-toggle-scratchpad dropdown1
    bindsym $mod+Shift+u exec ~/.local/bin/scripts/swayvm-toggle-scratchpad dropdown2

    # Browser
    bindsym $mod+Shift+t exec firefox
    bindsym $mod+Shift+n exec firefox -private-window

    # File-manager
    bindsym $mod+Shift+f exec thunar

    # System
    bindsym $mod+Shift+s exec pavucontrol
    bindsym $mod+n exec dms ipc call notifications open

    # Screen brightness
    bindsym XF86MonBrightnessUp exec dms ipc call brightness increment 5 "backlight:intel_backlight"
    bindsym XF86MonBrightnessDown exec dms ipc call brightness decrement 5 "backlight:intel_backlight"

    # Audio
    bindsym XF86AudioRaiseVolume exec dms ipc call audio increment 3
    bindsym XF86AudioLowerVolume exec dms ipc call audio decrement 3
    bindsym XF86AudioMute exec dms ipc call audio mute
    bindsym XF86AudioMicMute exec dms ipc call audio micmute

