#!/usr/bin/env bash

pid1=$(pgrep -f "alacritty --class dropdown1")
pid2=$(pgrep -f "alacritty --class dropdown2")

[[ "$pid1" != "" ]] && kill "$pid1"
[[ "$pid2" != "" ]] && kill "$pid2"

(cd ~ && alacritty --class dropdown1 -e distrobox enter arch &) &
(cd ~ && alacritty --class dropdown2 -e distrobox enter arch &) &
